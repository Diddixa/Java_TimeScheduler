<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="900.0" stylesheets="@../main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MasterController">
    <left>
        <VBox prefHeight="500.0" prefWidth="0.0" style="-fx-background-color: #AA336A;" BorderPane.alignment="CENTER" />
    </left>
    <center>
        <VBox style="-fx-background-color: #AA336A;" BorderPane.alignment="CENTER">
            <children>
                <HBox maxWidth="-Infinity" minWidth="-Infinity" prefHeight="45.0" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" text="Initialize" />
                        <Button mnemonicParsing="false" text="Clear Tables" />
                        <Button mnemonicParsing="false" text="Refresh" />
                        <Button mnemonicParsing="false" onAction="#buttonRemove" text="Remove User" />
                        <Button fx:id="closeButton" cancelButton="true" mnemonicParsing="false" onAction="#handleCloseButtonAction" text="Logout" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <ScrollPane prefHeight="415.0" prefWidth="800.0" style="-fx-background-color: transparent;">
                    <content>
                        <TableView fx:id="tableView" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                            <columns>
                                <TableColumn fx:id="colID" maxWidth="150.0" prefWidth="55.0" text="ID" />
                                <TableColumn fx:id="colUsername" maxWidth="150.0" onEditCommit="#onEditChange" prefWidth="150.0" text="Username" />
                                <TableColumn fx:id="colFirstName" maxWidth="150.0" onEditCommit="#onEditChange" prefWidth="150.0" text="First Name" />
                                <TableColumn fx:id="colLastName" maxWidth="150.0" onEditCommit="#onEditChange" prefWidth="150.0" text="Last Name" />
                                <TableColumn fx:id="colEmail" maxWidth="150.0" onEditCommit="#onEditChange" prefWidth="150.0" text="Email Address" />
                                <TableColumn fx:id="colBirthday" maxWidth="150.0" prefWidth="150.0" text="Birthday" />
                            </columns>
                        </TableView>
                    </content>
                </ScrollPane>
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity" spacing="10.0">
                    <children>
                        <TextField fx:id="textFieldID" prefHeight="25.0" prefWidth="39.0" promptText="ID" />
                        <TextField fx:id="textFieldUsername" prefHeight="25.0" prefWidth="108.0" promptText="Username" />
                        <TextField fx:id="textFieldFirstName" promptText="First Name" />
                        <TextField fx:id="textFieldLastName" promptText="Last Name" />
                        <TextField fx:id="textFieldEmail" promptText="Email Address" />
                        <DatePicker fx:id="datePickerBirthday" prefHeight="25.0" prefWidth="112.0" />
                        <Button mnemonicParsing="false" onAction="#buttonAdd" text="Add" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
