<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="81.0" prefWidth="699.0" style="-fx-background-color: ffff;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MyEventsToPdfController">
   <children>
      <AnchorPane prefHeight="101.0" prefWidth="705.0" style="-fx-background-color: AA336A;">
         <children>
            <ImageView fitHeight="64.0" fitWidth="71.0" layoutX="21.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/time.png" />
               </image>
            </ImageView>
            <Label contentDisplay="CENTER" layoutX="227.0" layoutY="21.0" prefHeight="43.0" prefWidth="136.0" text="MY EVENTS" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <TableView fx:id="myEventsTableView" layoutX="10.0" layoutY="147.0" prefHeight="235.0" prefWidth="690.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="28.0" text="Id" />
          <TableColumn fx:id="colName" prefWidth="85.0" text="Name" />
          <TableColumn fx:id="colDate" prefWidth="59.0" text="Date" />
            <TableColumn fx:id="colStartTime" prefWidth="72.0" text="Start" />
            <TableColumn fx:id="colLEndTime" prefWidth="70.0" text="End" />
            <TableColumn fx:id="colLocation" prefWidth="71.0" text="Location" />
            <TableColumn fx:id="colPriority" prefWidth="77.0" text="Priority" />
            <TableColumn fx:id="colReminder" prefWidth="69.0" text="Reminder" />
            <TableColumn fx:id="colParticipants" prefWidth="150.0" text="Participants" />
        </columns>
      </TableView>
      <Button fx:id="btnExportPDF" contentDisplay="CENTER" layoutX="499.0" layoutY="394.0" mnemonicParsing="false" onAction="#btnExportToPDFOnAction" prefHeight="64.0" prefWidth="186.0" text="Export selected rows to PDF" textOverrun="CLIP" />
      <Button fx:id="btnExportWeeklyEvents" layoutX="236.0" layoutY="394.0" mnemonicParsing="false" onAction="#btnExportWeeklyToPDFOnAction" prefHeight="64.0" prefWidth="213.0" text="Export current week agenda to PDF " />
   </children>
</AnchorPane>
