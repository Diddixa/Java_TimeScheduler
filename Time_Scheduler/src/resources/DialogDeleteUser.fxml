<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="160.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DialogDeleteUserController">
   <children>
      <VBox alignment="TOP_CENTER" maxWidth="300.0" prefHeight="150.0" prefWidth="300.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Enter the user ID" textAlignment="CENTER" />
            <TextField fx:id="textFieldID" promptText="User ID" />
            <HBox alignment="TOP_CENTER" prefHeight="150.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="buttonDelete" mnemonicParsing="false" onMouseClicked="#delete" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #AA336A;" text="Delete" textFill="WHITE">
                     <font>
                        <Font name="Roboto Medium" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="buttonCancel" mnemonicParsing="false" onMouseClicked="#cancel" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #AA336A;" text="Cancel" textFill="WHITE">
                     <font>
                        <Font name="Roboto Medium" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
