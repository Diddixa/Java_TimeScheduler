<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="thumbEvent" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ThumbEventController">
   <children>
      <VBox prefHeight="170.0" prefWidth="310.0" style="-fx-cursor: hand; -fx-border-radius: 50px;">
         <children>
            <Label fx:id="eventName" graphicTextGap="15.0" minHeight="20.0" prefHeight="20.0" styleClass="eventName" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="Roboto" size="16.0" />
               </font>
               <graphic>
                  <Pane fx:id="priority" prefHeight="15.0" prefWidth="15.0" style="-fx-background-color: #ff6363;" styleClass="bg-prio" />
               </graphic>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="30.0" prefWidth="280.0">
               <children>
                  <Label graphicTextGap="15.0" minHeight="20.0" prefHeight="20.0" text="Date:">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="43.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="eventDate" graphicTextGap="15.0" minHeight="20.0" prefHeight="20.0">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label graphicTextGap="15.0" minHeight="20.0" prefHeight="20.0" text="Start time:">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="eventStartTime" graphicTextGap="15.0" minHeight="20.0" prefHeight="20.0">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label graphicTextGap="15.0" minHeight="20.0" prefHeight="20.0" text="End time:">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="17.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="eventEndTime" graphicTextGap="15.0" minHeight="20.0" prefHeight="20.0">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Button mnemonicParsing="false" onAction="#buttonShowEvent" prefHeight="25.0" prefWidth="300.0" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
   </children>
</AnchorPane>
